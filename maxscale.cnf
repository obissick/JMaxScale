# MaxScale documentation on GitHub:
# https://github.com/mariadb-corporation/MaxScale/blob/master/Documentation/Documentation-Contents.md

# Global parameters
#
# Complete list of configuration options:
# https://github.com/mariadb-corporation/MaxScale/blob/master/Documentation/Getting-Started/Configuration-Guide.md

[maxscale]
threads=8

# Server definitions
#
# Set the address of the server to the network
# address of a MySQL server.
#

[galeraqa1]
type=server
address=10.1.20.71
port=3306
protocol=MySQLBackend

[galeraqa2]
type=server
address=10.1.20.72
port=3306
protocol=MySQLBackend

[galeraqa3]
type=server
address=10.1.20.73
port=3306
protocol=MySQLBackend

[galeraqa4]
type=server
address=10.1.20.87
port=3306
protocol=MySQLBackend

[galeraqa5]
type=server
address=10.1.20.88
port=3306
protocol=MySQLBackend

[single]
type=server
address=10.1.30.21
port=3306
protocol=MySQLBackend

#
# This will keep MaxScale aware of the state of the servers.
# MySQL Monitor documentation:
# https://github.com/mariadb-corporation/MaxScale/blob/master/Documentation/Monitors/MySQL-Monitor.md

[Galera Monitor]
type=monitor
module=galeramon
servers=galeraqa1,galeraqa2,galeraqa3,galeraqa4,galeraqa5
user=maxscale
passwd=7UOdaoNXeJdZ
monitor_interval=2000
#disable_master_failback=1
#available_when_donor=1

[MySQL Monitor]
type=monitor
module=mysqlmon
servers=single
user=maxscale
passwd=Welcome01

# Service definitions
#
# Service Definition for a read-only service and
# a read/write splitting service.
#

# ReadConnRoute documentation:
# https://github.com/mariadb-corporation/MaxScale/blob/master/Documentation/Routers/ReadConnRoute.md

[Single]
type=service
router=readconnroute
servers=single
user=maxscale
passwd=Welcome01
router_options=master

[Read-Only Service]
type=service
router=readconnroute
servers=galeraqa1,galeraqa2,galeraqa3,galeraqa4,galeraqa5
user=maxscale
passwd=7UOdaoNXeJdZ
router_options=master

[Round]
type=service
router=readconnroute
servers=galeraqa1,galeraqa2,galeraqa3,galeraqa4,galeraqa5
user=maxscale
passwd=7UOdaoNXeJdZ
router_options=synced

# ReadWriteSplit documentation:
# https://github.com/mariadb-corporation/MaxScale/blob/master/Documentation/Routers/ReadWriteSplit.md

[Read-Write Service]
type=service
router=readwritesplit
servers=galeraqa1,galeraqa2,galeraqa3,galeraqa4,galeraqa5
user=maxscale
passwd=7UOdaoNXeJdZ
max_slave_connections=100%

# This service enables the use of the MaxAdmin interface
# MaxScale administration guide:
# https://github.com/mariadb-corporation/MaxScale/blob/master/Documentation/Reference/MaxAdmin.md

[MaxAdmin Service]
type=service
router=cli

# Listener definitions for the services
#
# These listeners represent the ports the
# services will listen on.
#

[Read-Only Listener]
type=listener
service=Read-Only Service
protocol=MySQLClient
port=3307

[Round Listener]
type=listener
service=Round
protocol=MySQLClient
port=3309

[Read-Write Listener]
type=listener
service=Read-Write Service
protocol=MySQLClient
port=3306

[Single Listener]
type=listener
service=Single
protocol=MySQLClient
port=3308


[MaxAdmin Listener]
type=listener
service=MaxAdmin Service
protocol=maxscaled
port=6603

